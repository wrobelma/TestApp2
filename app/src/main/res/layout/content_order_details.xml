<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_order_details"
        tools:context=".OrderDetails">

    <TextView
            android:text="Data zgłoszenia"
            android:layout_height="wrap_content"
            android:id="@+id/order_date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
    />
    <TextView
            android:text="Lokalizacja GPS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/gps_location" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/order_date" app:layout_constraintEnd_toEndOf="@+id/order_date"
            app:layout_constraintStart_toStartOf="@+id/order_date"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/order_type" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gps_location"
            app:layout_constraintStart_toStartOf="@+id/gps_location"
            app:layout_constraintEnd_toEndOf="@+id/gps_location" android:hint="Typ zgłoszenia"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/network_element" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/order_type"
            app:layout_constraintEnd_toEndOf="@+id/order_type"
            app:layout_constraintStart_toStartOf="@+id/order_type" android:inputType="text"
            android:hint="Rodzaj elementu sieci"/>
    <GridView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/network_element"
            app:layout_constraintEnd_toEndOf="@+id/network_element"
            app:layout_constraintStart_toStartOf="@+id/network_element" android:layout_marginBottom="96dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>